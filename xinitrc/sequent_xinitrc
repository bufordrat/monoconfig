# dunst
dunst &
NOTIFY=notify-send
FAILED=$(systemctl --no-legend --no-pager --failed | awk '{print $1}')
if [ "$FAILED" != "" ]
then $NOTIFY -a systemd -u critical "systemd failures" "$FAILED"
fi

# make sure firewalld is running
(
    if [ "$(systemctl is-active firewalld)" != "active" ]
    then $NOTIFY -a arch -u critical "firewalld is down!" "$(systemctl status firewalld | head -12)"
    fi
) &

# activate multiple monitors
sh /home/teichman/.config/herbstluftwm/monitors-arandr.sh

# set meta to super
setxkbmap -option altwin:meta_win

# compositor
picom -b --no-fading-openclose
