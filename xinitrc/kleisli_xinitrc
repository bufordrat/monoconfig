# dunst
dunst &
NOTIFY=notify-send
FAILED=$(systemctl --no-legend --no-pager --failed | awk '{print $1}')
if [ "$FAILED" != "" ]
then $NOTIFY -a systemd -u critical "systemd failures" "$FAILED"
fi

# compositor
picom -b -c --fading=false --vsync --backend glx --xrender-sync-fence --glx-no-stencil --no-use-damage --glx-no-rebind-pixmap

# set meta to super
setxkbmap -option altwin:meta_win

# nm-applet for authentication to UChicago VPN
nm-applet &
