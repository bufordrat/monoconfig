# SMB level 6-2 desktop pattern
feh --bg-fill ~/.config/herbstluftwm/bg.png

# launcher
hc keybind $Mod-Shift-p spawn sh -c 'dmenu_path | dmenu -f -fn "M+ 1mn-9" | xargs -d \\n urxvt -e'
hc keybind $Mod-p spawn sh -c "dmenu_path | dmenu_run_history -fn 'M+ 1mn-9'"

# mpd play/pause keybinding
hc keybind Mod1+F6 spawn mpc toggle

# frame gap set for high-res display
hc set frame_gap 40

# emacsclient shortcut key
hc keybind $Mod+backslash spawn emacsclient -cn
