# SMB level 6-2 desktop pattern
feh --bg-fill ~/.config/herbstluftwm/bg.png

# launcher
hc keybind $Mod-p spawn sh -c "dmenu_path | dmenu_run_history -fn 'M+ 1mn-10'"

# suspend
hc keybind Ctrl+$Mod+End spawn ~/bin/susp.sh

# frame gap set for high-res display
hc set frame_gap 40

# xterm
hc keybind $Mod+Return spawn xterm -e fish

# emacsclient shortcut key
hc keybind $Mod+backslash spawn emacsclient -cn
